<!-- Header calling Username -->
<h1>All Posts by <%= @user.username %> </h1>
<!-- Iterate Thru user's posts -->
<% @user.posts.each do |post| %>
  <div class="row">
    <div class="col-md-8 col-offset-2">
      <div class="well">
    <!-- Content of each User's post-->
        <h3><%= post.title %></h3>
        <!-- Style the time of post -->
        <p><em>posted on <%= post.created_at.strftime("%a/%m/%d/%y") %></em></p>
        <!-- Blog Entry with HTML Safe attributes -->
        <p><%= post.blog_entry.html_safe %> </p>
        <!-- Links Links Links -->
        <p>
          <!-- Link to individual Post -->
          <%= link_to "Show", post, class: "btn btn-danger btn-sm" %> 
          <!-- Check to see if current User owns post -->
          <% if current_user.id == post.user_id %> 
            <!-- EDIT and DESTROY if User owns post -->
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-info btn-sm" %> 
            <%= link_to "Destroy", post, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %> 
          <% end %> 
        </p>
      </div>
    </div>
  </div>
<% end %>  

